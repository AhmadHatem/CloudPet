<p id="notice"><%= notice %></p>

<h1>Listing Devices</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Register</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        
        <td><%= device.User.first_name %></td>
        <td><%= device.Register.name %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_tag("/devices/register2" ) do %>
  <%= label_tag(:text2, "Register a device using ID") %>
  <%= text_field_tag :text2 %>
  <%= label_tag(:text3, "Enter pet you'd like to link") %>
  <%= text_field_tag :text3 %>

  <%= submit_tag "Register" %>
<% end %>    


<%= link_to 'New Device', new_device_path %>
