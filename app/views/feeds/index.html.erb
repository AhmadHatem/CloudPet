<p id="notice"><%= notice %></p>

<h1>Profile</h1>

<table>
 

  <tbody>
    
    <div>
       <h3> <%= current_user.first_name %> <%= current_user.last_name %></h3>
        <% if Date.current.month>current_user.date_of_birth.month %>
        <h6>age</h6> <%= Date.current.year-current_user.date_of_birth.year%> </br>
        <%else%>
        <h4>age: <%= (Date.current.year-current_user.date_of_birth.year)-1%> </br></h4>
        <%end%>
    </div>
    <hr>

     <div>
           <% if current_user.reminders.size ==0 %>
                <em> Nothing to be done</em> </br>
           <% else %>
            <thead>
                  <tr>
                   <th>Body</th>
                   <th>Due Date</th>
                    <th colspan="3"></th>
                   </tr>
                    </thead>
                    
          <% @reminders.each do |reminder|%>
          
          <tr>
          <td><%= reminder.body %></td>
          <td><%= reminder.due_date %></td>

          <% if reminder.due_date == Date.current %>
          <%= flash[:notice] = "This reminder is due today: #{reminder.body}" %> </br>

          <% end %>
          </tr>
          <%end%>
          <%end%>
        <%=link_to 'New Reminder', new_reminder_path %>
      
      
    </div> </br> </br>
    <hr>
  <table>
  
    <div>
    <% if current_user.feeds.size ==0 %>
          <em>No news feed available to show</em> </br>
    <% else %>
    <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.body %></td>
        <td><%= feed.User %></td>
      </tr>
    <% end %>
    <%end%>
    </div>

  </tbody>
</table>

<br>

